<%= form_for([@invoice, @piece]) do |f| %>
    <% if @piece.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@piece.errors.count, "error") %> prohibited this client from being saved:</h2>

          <ul>
            <% @piece.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :text, "Text" %><br>
      <%= f.text_field :text %>
    </div>
