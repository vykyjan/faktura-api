      <%= f.label :number_piece, "Počet kusů" %><br>
      <%= f.text_field :number_piece %>
    </div>
    <div class="field">
      <%= f.label :price_piece, "Cena za kus" %><br>
      <%= f.text_field :price_piece %>
    </div>
    <div class="field">
      <%= f.label :DPH , "DPH"%><br>
      <%= f.text_field :DPH %>
    </div>


    <div class="actions">
      <%= f.submit "Nová položka" %>
    </div>
<% end %>